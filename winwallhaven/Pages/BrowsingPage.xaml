<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="winwallhaven.Pages.BrowsingPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock VerticalAlignment="Center" Text="Page:" />
                    <TextBlock VerticalAlignment="Center" Text="{Binding CurrentPage}" />
                    <TextBlock VerticalAlignment="Center" Text="/" />
                    <TextBlock VerticalAlignment="Center" Text="{Binding LastPage}" />
                </StackPanel>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Filter" Label="Filters">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel Spacing="6" Padding="8">
                                <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <StackPanel>
                                    <CheckBox Content="General"
                                              IsChecked="{Binding Filters.CategoryGeneral, Mode=TwoWay}" />
                                    <CheckBox Content="Anime" IsChecked="{Binding Filters.CategoryAnime, Mode=TwoWay}" />
                                    <CheckBox Content="People"
                                              IsChecked="{Binding Filters.CategoryPeople, Mode=TwoWay}" />
                                </StackPanel>
                                <TextBlock Text="Purity" FontWeight="SemiBold" Margin="0,8,0,4" />
                                <StackPanel>
                                    <CheckBox Content="SFW" IsChecked="{Binding Filters.PuritySfw, Mode=TwoWay}" />
                                    <CheckBox Content="Sketchy"
                                              IsChecked="{Binding Filters.PuritySketchy, Mode=TwoWay}" />
                                    <CheckBox Content="NSFW" IsChecked="{Binding Filters.PurityNsfw, Mode=TwoWay}" />
                                </StackPanel>
                                <Button Content="Apply" HorizontalAlignment="Right" Margin="0,8,0,0"
                                        Command="{Binding ApplyFiltersCommand}" />
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="Refresh" Label="Refresh" Command="{Binding RefreshCommand}" />
                <AppBarSeparator />
                <AppBarButton Icon="Previous" Label="Prev" Command="{Binding PrevPageCommand}" />
                <AppBarButton Icon="Next" Label="Next" Command="{Binding NextPageCommand}" />
            </CommandBar.PrimaryCommands>
        </CommandBar>

        <Grid Grid.Row="1">
            <GridView ItemsSource="{Binding Results}"
                      Style="{StaticResource ResponsiveWallpaperGridViewWithMenu}" />
        </Grid>

        <!-- Page Loading Overlay -->
        <Grid Grid.RowSpan="2" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Opacity="0.85"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="64" Height="64" />
                <TextBlock Text="Loading wallpapers..." FontSize="14" FontWeight="SemiBold" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
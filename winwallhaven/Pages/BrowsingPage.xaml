<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="winwallhaven.Pages.BrowsingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right">
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Filter" Label="Filters">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel Spacing="6" Padding="8">
                                <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <StackPanel>
                                    <CheckBox Content="General"
                                              IsChecked="{Binding Filters.CategoryGeneral, Mode=TwoWay}" />
                                    <CheckBox Content="Anime" IsChecked="{Binding Filters.CategoryAnime, Mode=TwoWay}" />
                                    <CheckBox Content="People"
                                              IsChecked="{Binding Filters.CategoryPeople, Mode=TwoWay}" />
                                </StackPanel>
                                <TextBlock Text="Purity" FontWeight="SemiBold" Margin="0,8,0,4" />
                                <StackPanel>
                                    <CheckBox Content="SFW" IsChecked="{Binding Filters.PuritySfw, Mode=TwoWay}"
                                              IsEnabled="False" />
                                </StackPanel>
                                <Button Content="Apply" HorizontalAlignment="Right" Margin="0,8,0,0"
                                        Command="{Binding ApplyFiltersCommand}" />
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="Zoom" Label="Min resolution">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom" Opening="MinResolutionFlyout_Opening">
                            <StackPanel Spacing="8" Padding="8">
                                <TextBlock Text="Pick minimum resolution" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Content="Use current screen" Click="UseCurrentScreen_Click" />
                                    <Button Content="Clear" Click="ClearMinResolution_Click" />
                                </StackPanel>
                                <TextBlock Text="Common" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Content="1920×1080" Click="PresetResolution_Click" Tag="1920x1080" />
                                    <Button Content="2560×1440" Click="PresetResolution_Click" Tag="2560x1440" />
                                    <Button Content="3840×2160" Click="PresetResolution_Click" Tag="3840x2160" />
                                    <Button Content="3440×1440" Click="PresetResolution_Click" Tag="3440x1440" />
                                </StackPanel>
                                <TextBlock Text="Custom" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <NumberBox x:Name="MinWidthBox" Minimum="1" PlaceholderText="Width"
                                               Value="{Binding Filters.MinWidth, Mode=TwoWay, TargetNullValue=0}"
                                               SmallChange="10" LargeChange="100" />
                                    <TextBlock Text="×" VerticalAlignment="Center" />
                                    <NumberBox x:Name="MinHeightBox" Minimum="1" PlaceholderText="Height"
                                               Value="{Binding Filters.MinHeight, Mode=TwoWay, TargetNullValue=0}"
                                               SmallChange="10" LargeChange="100" />
                                    <Button Content="Apply" Click="ApplyMinResolution_Click" />
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Previous" Label="Prev" Command="{Binding PrevPageCommand}" />
                <AppBarElementContainer VerticalAlignment="Center">
                    <Grid Height="40" Margin="8,0">
                        <TextBlock Text="{Binding CurrentPage}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Grid>
                </AppBarElementContainer>
                <AppBarButton Icon="Next" Label="Next" Command="{Binding NextPageCommand}" />
                <AppBarSeparator />
                <AppBarButton Icon="Refresh" Label="Refresh" Command="{Binding RefreshCommand}" />
            </CommandBar.PrimaryCommands>
        </CommandBar>

        <Grid Grid.Row="1">
            <GridView ItemsSource="{Binding Results}"
                      Style="{StaticResource ResponsiveWallpaperGridViewWithMenu}" />
        </Grid>

        <!-- Centered Error Overlay -->
        <Grid Grid.RowSpan="2" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Opacity="0.90"
              Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
              Canvas.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <FontIcon Glyph="&#xEA39;" FontSize="36"/>
                <TextBlock Text="Unable to load wallpapers" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" TextAlignment="Center" />
                <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="520" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                    <HyperlinkButton Content="Open wallhaven.cc API"
                                     NavigateUri="https://wallhaven.cc/api/v1/search"
                                     Visibility="{Binding ShowApiLink, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="Retry" Command="{Binding RetryCommand}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.RowSpan="2" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Opacity="0.85"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Canvas.ZIndex="99">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="64" Height="64" />
                <TextBlock Text="Loading wallpapers..." FontSize="14" FontWeight="SemiBold" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
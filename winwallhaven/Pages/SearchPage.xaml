<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="winwallhaven.Pages.SearchPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox Width="300" PlaceholderText="Search"
                             Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" Text="{Binding CurrentPage}" />
                </StackPanel>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Filter" Label="Filters">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel Spacing="6" Padding="8">
                                <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,4" />
                                <StackPanel>
                                    <CheckBox Content="General"
                                              IsChecked="{Binding Filters.CategoryGeneral, Mode=TwoWay}" />
                                    <CheckBox Content="Anime" IsChecked="{Binding Filters.CategoryAnime, Mode=TwoWay}" />
                                    <CheckBox Content="People"
                                              IsChecked="{Binding Filters.CategoryPeople, Mode=TwoWay}" />
                                </StackPanel>
                                <TextBlock Text="Purity" FontWeight="SemiBold" Margin="0,8,0,4" />
                                <StackPanel>
                                    <CheckBox Content="SFW" IsChecked="{Binding Filters.PuritySfw, Mode=TwoWay}" />
                                    <CheckBox Content="Sketchy"
                                              IsChecked="{Binding Filters.PuritySketchy, Mode=TwoWay}" />
                                    <CheckBox Content="NSFW" IsChecked="{Binding Filters.PurityNsfw, Mode=TwoWay}" />
                                </StackPanel>
                                <Button Content="Apply" HorizontalAlignment="Right" Margin="0,8,0,0"
                                        Command="{Binding ApplyFiltersCommand}" />
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="Zoom" Label="Min resolution">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Bottom" Opening="MinResolutionFlyout_Opening">
                            <StackPanel Spacing="8" Padding="8">
                                <TextBlock Text="Pick minimum resolution" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Content="Use current screen" Click="UseCurrentScreen_Click" />
                                    <Button Content="Clear" Click="ClearMinResolution_Click" />
                                </StackPanel>
                                <TextBlock Text="Common" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Button Content="1920×1080" Click="PresetResolution_Click" Tag="1920x1080" />
                                    <Button Content="2560×1440" Click="PresetResolution_Click" Tag="2560x1440" />
                                    <Button Content="3840×2160" Click="PresetResolution_Click" Tag="3840x2160" />
                                    <Button Content="3440×1440" Click="PresetResolution_Click" Tag="3440x1440" />
                                </StackPanel>
                                <TextBlock Text="Custom" FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <NumberBox x:Name="MinWidthBox" Minimum="1" PlaceholderText="Width"
                                               Value="{Binding Filters.MinWidth, Mode=TwoWay, TargetNullValue=0}"
                                               SmallChange="10" LargeChange="100" />
                                    <TextBlock Text="×" VerticalAlignment="Center" />
                                    <NumberBox x:Name="MinHeightBox" Minimum="1" PlaceholderText="Height"
                                               Value="{Binding Filters.MinHeight, Mode=TwoWay, TargetNullValue=0}"
                                               SmallChange="10" LargeChange="100" />
                                    <Button Content="Apply" Click="ApplyMinResolution_Click" />
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="Find" Label="Search" Command="{Binding SearchCommand}" />
                <AppBarSeparator />
                <AppBarButton Icon="Previous" Label="Prev" Command="{Binding PrevPageCommand}" />
                <AppBarButton Icon="Next" Label="Next" Command="{Binding NextPageCommand}" />
            </CommandBar.PrimaryCommands>
        </CommandBar>

        <Grid Grid.Row="1">
            <GridView ItemsSource="{Binding Results}"
                      SelectedItem="{Binding Selected, Mode=TwoWay}"
                      Style="{StaticResource ResponsiveWallpaperGridViewWithMenu}" />
        </Grid>

        <!-- Page Loading Overlay -->
        <Grid Grid.RowSpan="2" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" Opacity="0.85"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Canvas.ZIndex="99">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="True" Width="64" Height="64" />
                <TextBlock Text="Searching wallpapers..." FontSize="14" FontWeight="SemiBold" />
            </StackPanel>
        </Grid>

        <!-- Full Screen Preview Overlay -->
        <Grid x:Name="FullScreenOverlay" Visibility="Collapsed" Background="Black" Grid.RowSpan="2" Canvas.ZIndex="100">
            <ScrollViewer x:Name="ImageScrollViewer" ZoomMode="Enabled"
                          HorizontalScrollMode="Auto" VerticalScrollMode="Auto"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          MinZoomFactor="0.1" MaxZoomFactor="10"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          SizeChanged="ImageScrollViewer_SizeChanged">
                <Image x:Name="FullScreenImage" Stretch="Uniform"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       ImageOpened="FullScreenImage_ImageOpened" />
            </ScrollViewer>

            <!-- Close Button -->
            <Button x:Name="ClosePreviewButton" Click="ClosePreviewButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"
                    Background="Black" BorderBrush="White" Foreground="White"
                    Width="40" Height="40" CornerRadius="20" Opacity="0.8">
                <SymbolIcon Symbol="Clear" />
                <ToolTipService.ToolTip>
                    <ToolTip Content="Close Preview (ESC)" />
                </ToolTipService.ToolTip>
            </Button>

            <!-- Info Panel (optional - shows image details) -->
            <Border Background="#80000000" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    Margin="20" CornerRadius="8" Padding="12" x:Name="InfoPanel" Opacity="0.9">
                <StackPanel>
                    <TextBlock x:Name="ImageIdText" Foreground="White" FontWeight="Bold" />
                    <TextBlock x:Name="ImageDimensionsText" Foreground="LightGray" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
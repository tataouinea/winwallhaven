<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="winwallhaven.Pages.SearchPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox Width="300" PlaceholderText="Search"
                             Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" Text="{Binding CurrentPage}" />
                </StackPanel>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Find" Label="Search" Command="{Binding SearchCommand}" />
                <AppBarSeparator />
                <AppBarButton Icon="Previous" Label="Prev" Command="{Binding PrevPageCommand}" />
                <AppBarButton Icon="Next" Label="Next" Command="{Binding NextPageCommand}" />
            </CommandBar.PrimaryCommands>
        </CommandBar>

        <Grid Grid.Row="1">
            <GridView ItemsSource="{Binding Results}" SelectionMode="Single"
                      SelectedItem="{Binding Selected, Mode=TwoWay}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="220">
                            <Image Source="{Binding Thumb}" Height="140" Stretch="UniformToFill"
                                   DoubleTapped="Image_DoubleTapped" Tag="{Binding}">
                                <Image.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Open in Browser" Icon="Globe"
                                                        Command="{Binding DataContext.OpenInBrowserCommand, ElementName=RootPage}"
                                                        CommandParameter="{Binding}" />
                                        <MenuFlyoutItem Text="Download" Icon="Download"
                                                        Command="{Binding DataContext.DownloadCommand, ElementName=RootPage}"
                                                        CommandParameter="{Binding}" />
                                        <MenuFlyoutItem Text="Set as Wallpaper" Icon="Pictures"
                                                        Command="{Binding DataContext.SetAsWallpaperCommand, ElementName=RootPage}"
                                                        CommandParameter="{Binding}" />
                                    </MenuFlyout>
                                </Image.ContextFlyout>
                            </Image>
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock>
                                <Run Text="{Binding Width}" />
                                <Run Text=" x " />
                                <Run Text="{Binding Height}" />
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>

        <!-- Full Screen Preview Overlay -->
        <Grid x:Name="FullScreenOverlay" Visibility="Collapsed" Background="Black" Grid.RowSpan="2">
            <ScrollViewer ZoomMode="Enabled" HorizontalScrollMode="Auto" VerticalScrollMode="Auto"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          MinZoomFactor="0.1" MaxZoomFactor="10">
                <Image x:Name="FullScreenImage" Stretch="Uniform" HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </ScrollViewer>

            <!-- Close Button -->
            <Button x:Name="ClosePreviewButton" Click="ClosePreviewButton_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"
                    Background="Black" BorderBrush="White" Foreground="White"
                    Width="40" Height="40" CornerRadius="20" Opacity="0.8">
                <SymbolIcon Symbol="Clear" />
                <ToolTipService.ToolTip>
                    <ToolTip Content="Close Preview (ESC)" />
                </ToolTipService.ToolTip>
            </Button>

            <!-- Info Panel (optional - shows image details) -->
            <Border Background="#80000000" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    Margin="20" CornerRadius="8" Padding="12" x:Name="InfoPanel" Opacity="0.9">
                <StackPanel>
                    <TextBlock x:Name="ImageIdText" Foreground="White" FontWeight="Bold" />
                    <TextBlock x:Name="ImageDimensionsText" Foreground="LightGray" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
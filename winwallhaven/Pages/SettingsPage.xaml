<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="winwallhaven.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <TextBlock Text="Settings" FontSize="28" FontWeight="SemiBold" />
            <TextBlock Text="Appearance" FontSize="20" Margin="0,16,0,4" />
            <StackPanel Spacing="4">
                <TextBlock Text="App theme" FontWeight="SemiBold" />
                <ComboBox x:Name="ThemeComboBox"
                          SelectionChanged="OnThemeSelectionChanged"
                          Width="200">
                    <ComboBoxItem Content="System (default)" />
                    <ComboBoxItem Content="Light" />
                    <ComboBoxItem Content="Dark" />
                </ComboBox>
                <TextBlock Text="Choose System to follow Windows theme." Opacity="0.7" />
            </StackPanel>
            <TextBlock Text="General" FontSize="20" Margin="0,16,0,4" />
            <StackPanel Spacing="4">
                <TextBlock Text="Lock screen warning" FontWeight="SemiBold" />
                <TextBlock x:Name="LockScreenWarningStatusText" TextWrapping="Wrap" />
                <Button Content="Reset warning" Click="OnResetLockScreenWarning" />
            </StackPanel>
            <TextBlock Text="(More settings coming soon)" Opacity="0.6" Margin="0,24,0,0" />
        </StackPanel>
    </ScrollViewer>
</Page>